@using Nutri.Mvc.Models
@model FichaTecnica

<form asp-action="Create" method="POST">

    <div class="uk-card uk-card-default uk-card-body">

        <div class="pesquisa-add-titulo">
            <legend class="uk-legend">Cadastro de Ficha Tecnica</legend>
        </div>

        <div class="formulario">

            <div class="uk-text-left" uk-grid>
                <div class="uk-width-3-4">
                    <div class="uk-margin">
                        <label class="uk-form-label" for="form-stacked-text">Nome da Preparação</label>
                        <input type="text" asp-for="NomePreparacao" class="uk-input">
                        <span asp-validation-for="NomePreparacao" class="uk-text-danger"></span>
                    </div>
                </div>
                <div class="uk-width-1-4">
                    <div class="uk-margin">
                        <label class="uk-form-label" for="form-stacked-text">Ingredientes</label>
                        <input type="text" asp-for="Ingredientes" class="uk-input">
                        <span asp-validation-for="Ingredientes" class="uk-text-danger"></span>
                    </div>
                </div>
            </div>


            <div class="uk-margin">
                <input type="submit" value="Concluir" class="uk-button uk-button-primary" />
                <a asp-action="Index" asp-controller="FichaTecnica" class="uk-button uk-button-default">Fechar</a>
            </div>
        </div>

    </div>
</form>


